<h1 class="mt-3 text-center">Add a new list</h1>
<%= simple_form_for [@list] do |f| %>
  <%= f.input :name %>
  <%= f.submit "Create list", class: "btn btn-primary" %>
<% end %>
<div class="mt-3">
<%= link_to lists_path, class: "text-decoration-none" do %>
  <i class="fa-solid fa-house"></i>
<% end %>
</div>
